---
import Layout from '@layouts/Layout.astro';
import Container from '@components/layout/Container.astro';
---

<Layout>
  <Container>
    <div class="starter">
      <header>
        <h1>Consent Press Starter</h1>
        <p>This is a project starter for Consent Press & affiliated endevours.</p>
      </header>
      <nav>
        <!-- Starter Nav -->
      </nav>
      <main>
        <section id="about">
          <h2>About</h2>
          <div class="content-box">
            A modern, opinionated starter template for building consent press websites and applications with Astro.
          </div>
        </section>
        <section id="features">
          <h2>Features</h2>
          <div class="content-box">
            <ul>
              <li>⚡️ Built with <a href="https://astro.build">Astro</a></li>
              <li>🎨 Styled with <a href="https://tailwindcss.com">Tailwind CSS</a></li>
              <li>📝 TypeScript support</li>
              <li>🧩 Component-based architecture</li>
              <li>📦 Package management with pnpm</li>
              <li>🛠️ Development tools (ESLint, Prettier)</li>
              <li>🔍 SEO optimized with sitemap generation</li>
              <li>📱 Responsive design</li>
              <li>🎯 Icon system with multiple providers</li>
              <li>📄 MDX support for enhanced content</li>
            </ul>
          </div>
        </section>
        <div id="structure">
          
        </div>
      </main>
    </div>
  </Container>
</Layout>
